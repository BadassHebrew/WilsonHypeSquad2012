<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/ugensLayout">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/startButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:background="#005699"
        android:onClick="startGame"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Options"
        android:id="@+id/optionsButton"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/startButton"
        android:layout_centerHorizontal="true"
        android:background="#005699"
        android:onClick="options"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Acheivements"
        android:id="@+id/achievementsButton"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/optionsButton"
        android:layout_centerHorizontal="true"
        android:background="#005699"
        android:onClick="achievements"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exitButton"
        android:layout_below="@+id/achievementsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:background="#005699" />

    <CheckBox
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:id="@+id/muteBox"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#005699" />

</RelativeLayout>
